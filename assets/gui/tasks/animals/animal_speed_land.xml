<task id="animal_speed_land" xmlns="teemu.xml.tasks">
    <title>Animal speed</title>
    <unit>kilometers per hour</unit>
    <unitLabel>km/h</unitLabel>
    <instruction>Order the animals by their top speed, from slowest to fastest</instruction>
    <intro>sort these animals by how fast they can run</intro>
    <whichItem>which animal</whichItem>
    <isSmallest>is the slowest animal</isSmallest>
    <isSmallerThan>is slower than</isSmallerThan>
    <theSmallest>the slowest</theSmallest>
    <isLargest>is the fastest animal</isLargest>
    <isLargerThan>is faster than</isLargerThan>
    <theLargest>the fastest</theLargest>
    <grammar>
        <smaller>slower</smaller>
        <smallest>slowest</smallest>
        <larger>faster | quicker</larger>
        <largest>fastest | quickest</largest>
    </grammar>
    <cards>
        <card definite="the tiger" id="tiger" image="tiger.jpg"
